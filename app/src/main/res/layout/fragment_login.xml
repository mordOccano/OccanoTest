<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.login.LoginFragment"
    android:id="@+id/loginFragment"
    android:background="@color/colorPrimaryDark">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/colorbackgroundWhite"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="All Vessels"
                android:textSize="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"

                android:layout_marginBottom="8dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/btn_background_add_vessel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_title">

            </androidx.recyclerview.widget.RecyclerView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_background_add_vessel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:padding="2dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_add_vessel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:weightSum="100"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_add_circle_black_24dp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_rv_login_shipname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:lines="1"

                            android:text="Add Vessel"
                            android:textColor="@color/colorText"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.8"
                android:background="@drawable/btnconnect"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btn_add_vessel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_addvessel"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
                app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
                app:layout_constraintStart_toStartOf="@+id/buttonLogin" />

            <ScrollView
                android:id="@+id/sv_et_forms"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/btn_background_add_vessel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_title">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/add_name_of_ship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:hint="Vessel Name"
                        android:inputType="textPersonName"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.101"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/login_title" />

                    <EditText
                        android:id="@+id/add_displacement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Displacement Engine"
                        android:inputType="numberDecimal"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_name_of_ship"
                        app:layout_constraintStart_toStartOf="@+id/add_name_of_ship"
                        app:layout_constraintTop_toBottomOf="@+id/add_name_of_ship" />

                    <EditText
                        android:id="@+id/add_num_of_cyl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Number Of Cylinders"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_displacement"
                        app:layout_constraintStart_toStartOf="@+id/add_displacement"
                        app:layout_constraintTop_toBottomOf="@+id/add_displacement" />

                    <EditText
                        android:id="@+id/add_diameter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Diameter of Piston in cm"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_num_of_cyl"
                        app:layout_constraintStart_toStartOf="@+id/add_num_of_cyl"
                        app:layout_constraintTop_toBottomOf="@+id/add_num_of_cyl" />

                    <EditText
                        android:id="@+id/add_imo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="IMO"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_diameter"
                        app:layout_constraintStart_toStartOf="@+id/add_diameter"
                        app:layout_constraintTop_toBottomOf="@+id/add_diameter" />

                    <EditText
                        android:id="@+id/add_year_built"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Year Built"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_imo"
                        app:layout_constraintStart_toStartOf="@+id/add_imo"
                        app:layout_constraintTop_toBottomOf="@+id/add_imo" />

                    <EditText
                        android:id="@+id/add_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Length Overall"
                        android:inputType="numberDecimal"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_year_built"
                        app:layout_constraintStart_toStartOf="@+id/add_year_built"
                        app:layout_constraintTop_toBottomOf="@+id/add_year_built" />

                    <EditText
                        android:id="@+id/add_breadth_extreme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Breadth Extreme"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_length"
                        app:layout_constraintStart_toStartOf="@+id/add_length"
                        app:layout_constraintTop_toBottomOf="@+id/add_length" />

                    <EditText
                        android:id="@+id/add_dead_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Dead Weight"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_breadth_extreme"
                        app:layout_constraintStart_toStartOf="@+id/add_breadth_extreme"
                        app:layout_constraintTop_toBottomOf="@+id/add_breadth_extreme" />

                    <EditText
                        android:id="@+id/add_gross_tonnage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Gross Tonnage"
                        android:inputType="number"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/add_dead_weight"
                        app:layout_constraintStart_toStartOf="@+id/add_dead_weight"
                        app:layout_constraintTop_toBottomOf="@+id/add_dead_weight" />
                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
